<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.luckywarepro.apisample.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <Button
            android:id="@+id/actionOpenSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/open_settings" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelFilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layoutFilenames"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"></LinearLayout>

                <Button
                    android:id="@+id/actionSelectFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/labelStartNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_note" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkCSharp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_c_sharp" />

                    <CheckBox
                        android:id="@+id/checkDSharp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_d_sharp" />

                    <CheckBox
                        android:id="@+id/checkFSharp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_f_sharp" />

                    <CheckBox
                        android:id="@+id/checkGSharp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_g_sharp" />

                    <CheckBox
                        android:id="@+id/checkASharp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_a_sharp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_c" />

                    <CheckBox
                        android:id="@+id/checkD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_d" />

                    <CheckBox
                        android:id="@+id/checkE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_e" />

                    <CheckBox
                        android:id="@+id/checkF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_f" />

                    <CheckBox
                        android:id="@+id/checkG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_g" />

                    <CheckBox
                        android:id="@+id/checkA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_a" />

                    <CheckBox
                        android:id="@+id/checkB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_b" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/labelOctave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/octave" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkOctave1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/octave_1" />

                <CheckBox
                    android:id="@+id/checkOctave2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/octave_2" />

                <CheckBox
                    android:id="@+id/checkOctave3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/octave_3" />

                <CheckBox
                    android:id="@+id/checkOctave4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/octave_4" />

                <CheckBox
                    android:id="@+id/checkOctave5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/octave_5" />

                <CheckBox
                    android:id="@+id/checkOctave6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/octave_6" />
            </LinearLayout>

            <TextView
                android:id="@+id/labelDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/direction" />

            <RadioGroup
                android:id="@+id/radioGroupDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioDirectionAny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/radio_any" />

                <RadioButton
                    android:id="@+id/radioDirectionAsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/direction_asc" />

                <RadioButton
                    android:id="@+id/radioDirectionDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/direction_desc" />

            </RadioGroup>

            <TextView
                android:id="@+id/labelTiming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/timing" />

            <RadioGroup
                android:id="@+id/radioGroupTiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioTimingAny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/radio_any" />

                <RadioButton
                    android:id="@+id/radioTimingMelodic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timing_melodic" />

                <RadioButton
                    android:id="@+id/radioTimingHarmonic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timing_harmonic" />

            </RadioGroup>

            <TextView
                android:id="@+id/labelInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interval" />

            <Spinner
                android:id="@+id/selectInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/labelTempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tempo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/actionTempoMinus"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-" />

                <SeekBar
                    android:id="@+id/seekTempo"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:max="200"
                    android:progress="1"
                    android:textAlignment="textEnd" />

                <Button
                    android:id="@+id/actionTempoPlus"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+" />

                <TextView
                    android:id="@+id/labelTempoValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/labelInstrument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instrument" />

            <AutoCompleteTextView
                android:id="@+id/inputInstrument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/actionClearAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_clear_all" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/actionCheckExistence"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/action_check_existence" />

                <Button
                    android:id="@+id/actionAddToAnki"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_add_to_anki" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>