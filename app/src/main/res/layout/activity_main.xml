<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.luckywarepro.apisample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelFilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_filename" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputFilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/actionSelectFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/select_filename" />
        </LinearLayout>

        <TextView
            android:id="@+id/labelStartNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_note" />

        <AutoCompleteTextView
            android:id="@+id/inputStartNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labelDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/direction" />

        <RadioGroup
            android:id="@+id/radioGroupDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioDirectionNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_none"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioDirectionAsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direction_asc" />

            <RadioButton
                android:id="@+id/radioDirectionDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direction_desc" />

        </RadioGroup>

        <TextView
            android:id="@+id/labelTiming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/timing" />

        <RadioGroup
            android:id="@+id/radioGroupTiming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioTimingNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_none"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioTimingMelodic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timing_melodic" />

            <RadioButton
                android:id="@+id/radioTimingHarmonic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timing_harmonic" />

        </RadioGroup>

        <TextView
            android:id="@+id/labelInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/interval" />

        <Spinner
            android:id="@+id/selectInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/labelTempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tempo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekTempo"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:max="200"
                android:progress="1"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/labelTempoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <TextView
            android:id="@+id/labelInstrument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instrument" />

        <AutoCompleteTextView
            android:id="@+id/inputInstrument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/actionClearAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_clear_all" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/actionCheckExistence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_check_existence" />

            <Button
                android:id="@+id/actionAddToAnki"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="@string/action_add_to_anki" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
